%h4.ui.center.aligned.medium.icon.header
  %i.circular.wechat.icon.app_color
  Say Something

.ui.two.column.grid
  .twelve.wide.column
    .ui.fluid.raised.card.chatbox
      .content#messages_content
        .ui.feed#messages_chat
          = render partial: 'message', collection: @messages

      .extra.content
        = form_for @message, html: { class: 'ui reply form' }, url: messages_path, local: false do |f|
          .field
            .ui.fluid.icon.input
              = f.text_field :body, placeholder: 'Enter a message'
              %i.bordered.inv_app_color.edit.icon.link.send_message

  .four.wide.column
    .ui.fluid.raised.card.chatbox
      .content
        .ui.inverted.vertical.menu
          %a.active.item
            Home
          %a.item
            Messages
          %a.item
            Friends
