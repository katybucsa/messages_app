%h4.ui.center.aligned.medium.icon.header
  %i.circular.wechat.icon.app_color
  Say Something

.ui.two.column.grid
  .twelve.wide.column
    .ui.fluid.raised.card.chatbox
      .content
        .ui.feed
          = render partial: 'message', collection: @messages

      .extra.content
        %form.ui.reply.form
          .field
            .ui.fluid.icon.input
              %input{placeholder: 'Enter a message', type: 'text'}
              %i.bordered.inv_app_color.edit.icon

  .four.wide.column
    .ui.fluid.raised.card.chatbox
      .content
        .ui.inverted.vertical.menu
          %a.active.item
            Home
          %a.item
            Messages
          %a.item
            Friends
